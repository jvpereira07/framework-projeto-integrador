<?xml version="1.0" encoding="UTF-8"?>
<gui>
    <!-- HUD do jogo com barras de status -->
    
    <!-- Container principal para o HUD no canto superior esquerdo -->
    <container x="90%" y="5%" sizex="200" sizey="64" texture="none" border="false">
        
        <!-- Barra de HP -->
        
        <text x="95%" y="7%" text="HP" font_size="14" color="255,0,0,255" />
        <!-- Barra vertical (preenche de cima para baixo) -->
        <!-- Barra horizontal reversa (direita -> esquerda) -->
    <statsbar x="95%" y="5%" sizex="200" sizey="25"
              texture_empty="28" texture_full="27" stat="hp"
              orientation="horizontal" direction="positive" />
    <statsbar x="95%" y="90%" sizex="200" sizey="25"
              texture_empty="36" texture_full="37" stat="stamina"
              orientation="horizontal" direction="positive" />
    
        <!-- Armas equipadas -->
        
    
    </container>
    <container x="90%" y="75%" sizex="200" sizey="64" texture="none" border="false">
    <main_weapon x="0%" y="70%" texture="43" />
    <secundary_weapon x="70%" y="10%" texture="44" />
    </container>
    
</gui>
